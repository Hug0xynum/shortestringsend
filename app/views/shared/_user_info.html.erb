<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <div class="user_name">
      <%= current_user.nom %>
    </div>
    <div class="microposts">
      <%= pluralize(current_user.microposts.count, "send") %>
    </div>
  </a>
</div>