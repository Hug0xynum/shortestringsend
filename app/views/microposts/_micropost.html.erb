<tr>
  <td class="micropost">
    <span class="content"><%= wrap(micropost.content) %></span>
    <span class="timestamp">
      Post√© il y a <%= time_ago_in_words(micropost.created_at) %>.
    </span>
  </td>
  	<% user = micropost.user rescue User.find(micropost.user_id) %>
	<% if current_user?(user) %>
  <td>
    <%= button_to "Supprimer", micropost, :method => :delete,
                                          :onclick => "confirm('Etes-vous certain ?'",
                                          :title => micropost.content %>
  </td>
  <% end %>
</tr>